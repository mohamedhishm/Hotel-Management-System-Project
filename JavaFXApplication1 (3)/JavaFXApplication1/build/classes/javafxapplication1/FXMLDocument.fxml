<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="stack_form" prefHeight="574.0" prefWidth="711.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxapplication1.FXMLDocumentController">
    <children>
        <AnchorPane prefHeight="574.0" prefWidth="711.0">
            <children>
                <!-- Left Pane -->
                <AnchorPane fx:id="main_form" layoutX="0.0" layoutY="0.0" prefHeight="574.0" prefWidth="354.0" styleClass="left-form" stylesheets="@LoginDesgin.css">
                    <children>
                        <FontAwesomeIcon fill="WHITE" glyphName="BUILDING" layoutX="113.0" layoutY="219.0" size="150" />
                        <Label layoutX="85.0" layoutY="287.0" text="Hotel Management" textFill="WHITE">
                            <font>
                                <Font name="Bell MT Bold" size="22.0" />
                            </font>
                        </Label>
                    </children>
                </AnchorPane>

                <!-- Right Pane -->
                <AnchorPane layoutX="354.0" prefHeight="574.0" prefWidth="357.0" styleClass="white-bg" stylesheets="@LoginDesgin.css">
                    <children>
                        <FontAwesomeIcon glyphName="USER" layoutX="155.0" layoutY="109.0" size="65" />
                        <Label layoutX="138.0" layoutY="119.0" text="Sign In" textFill="#177fee">
                            <font>
                                <Font name="Britannic Bold" size="29.0" />
                            </font>
                        </Label>
                        <TextField fx:id="username" layoutX="84.0" layoutY="170.0" prefHeight="30.0" prefWidth="200.0" promptText="Username" styleClass="textfield" stylesheets="@LoginDesgin.css" />
                        <PasswordField fx:id="password" layoutX="84.0" layoutY="215.0" prefHeight="30.0" prefWidth="200.0" promptText="Password" styleClass="textfield" stylesheets="@LoginDesgin.css" />
                        
                        <!-- Login Button -->
                        <Button fx:id="loginBtn" layoutX="144.0" layoutY="269.0" onAction="#login" prefHeight="36.0" prefWidth="74.0" styleClass="login-btn" stylesheets="@LoginDesgin.css" text="Login" />

                        <!-- Register Button (New) -->
                        <Button fx:id="registerBtn" layoutX="125.0" layoutY="329.0" onAction="#register" prefHeight="14.0" prefWidth="111.0" style="-fx-background-color: #F4F8D3; -fx-background-radius: 9; -fx-background-size: 1; -fx-border-color: #273F4F; -fx-border-radius: 7; -fx-border-width: 2;" styleClass="register-btn" stylesheets="@LoginDesgin.css" text="Register" textFill="#273f4f">
                     <font>
                        <Font name="Lucida Sans Demibold Italic" size="15.0" />
                     </font></Button>

                        <!-- Close Button -->
                        <Button fx:id="close" layoutX="300.0" layoutY="10.0" onAction="#exit" prefHeight="30.0" prefWidth="30.0" styleClass="close-btn">
                            <graphic>
                                <FontAwesomeIcon glyphName="CLOSE" size="15" />
                            </graphic>
                        </Button>
                  <Label layoutX="11.0" layoutY="477.0" text="Your Comfort, Our Priority" textFill="#bfed18">
                     <font>
                        <Font name="Britannic Bold" size="2.0" />
                     </font>
                  </Label>
                    </children>
                </AnchorPane>
            </children>
        </AnchorPane>
    </children>
</StackPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="stack_form" prefHeight="574.0" prefWidth="711.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxapplication1.RegisterController">
    <children>
        <AnchorPane prefHeight="574.0" prefWidth="711.0">
            <children>
                <!-- Left Pane -->
                <AnchorPane fx:id="main_form" layoutX="0.0" layoutY="0.0" prefHeight="574.0" prefWidth="354.0" styleClass="left-form" stylesheets="@LoginDesgin.css">
                    <children>
                        <FontAwesomeIcon fill="WHITE" glyphName="BUILDING" layoutX="113.0" layoutY="219.0" size="150" />
                        <Label layoutX="85.0" layoutY="287.0" text="Hotel Management" textFill="WHITE">
                            <font>
                                <Font name="Bell MT Bold" size="22.0" />
                            </font>
                        </Label>
                    </children>
                </AnchorPane>

                <!-- Right Pane -->
                <AnchorPane layoutX="354.0" prefHeight="574.0" prefWidth="357.0" styleClass="white-bg" stylesheets="@LoginDesgin.css">
                    <children>
                        <FontAwesomeIcon glyphName="USER_PLUS" layoutX="155.0" layoutY="109.0" size="65" />
                        <Label layoutX="130.0" layoutY="119.0" text="Register" textFill="#177fee">
                            <font>
                                <Font name="Britannic Bold" size="29.0" />
                            </font>
                        </Label>
                        <TextField fx:id="username" layoutX="84.0" layoutY="170.0" prefHeight="30.0" prefWidth="200.0" promptText="Username" styleClass="textfield" stylesheets="@LoginDesgin.css" />
                        <PasswordField fx:id="password" layoutX="84.0" layoutY="215.0" prefHeight="30.0" prefWidth="200.0" promptText="Password" styleClass="textfield" stylesheets="@LoginDesgin.css" />
                        <PasswordField fx:id="confirmPassword" layoutX="84.0" layoutY="260.0" prefHeight="30.0" prefWidth="200.0" promptText="Confirm Password" styleClass="textfield" stylesheets="@LoginDesgin.css" />
                        <Button fx:id="registerBtn" layoutX="127.0" layoutY="310.0" onAction="#register" prefHeight="36.0" prefWidth="107.0" styleClass="login-btn" stylesheets="@LoginDesgin.css" text="Register" />
                        <Button fx:id="backToLoginBtn" layoutX="144.0" layoutY="360.0" onAction="#backToLogin" prefHeight="36.0" prefWidth="74.0" styleClass="login-btn" stylesheets="@LoginDesgin.css" text="Back" />

                        <!-- Close Button -->
                        <Button fx:id="close" layoutX="300.0" layoutY="10.0" onAction="#exit" prefHeight="30.0" prefWidth="30.0" styleClass="close-btn">
                            <graphic>
                                <FontAwesomeIcon glyphName="CLOSE" size="15" />
                            </graphic>
                        </Button>
                    </children>
                </AnchorPane>
            </children>
        </AnchorPane>
    </children>
</StackPane>
